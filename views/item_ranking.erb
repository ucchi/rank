<!--参考: https://github.com/k2works/sinatra_rakuten_api-->
<div class="starter-template">
<%
  if(params[:sex]=='0')then
    ssex = '男性'
  else
    ssex = '女性'
  end
%>
  <h1><%= params[:age] %>代<%= ssex %> のランキングTOP 30</h1>
    <table class="table table-hover">
      <tr>
        <th>商品名</th>
        <th>値段</th>
      </tr>
      <% @rankings.each do |ranking| %>            
      <tr>            
        <td><%= ranking.name %></td>
        <td><%= ranking.price %></td>
      </tr>
      <% end %>                    
    </table>          
</div>
